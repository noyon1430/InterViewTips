<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    tools:context=".TopicsCategory">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
    <Button
        android:id="@+id/button_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANDROID"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/button_java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JAVA"
        android:textSize="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/red"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_python"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PYTHON"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_cplus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C++"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_.net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=".NET"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_html"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HTML"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_css"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSS"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_javascript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JAVASCRIPT"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_os"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OS"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATABASE"
        android:textSize="25dp"
        android:background="@color/red"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
        <Button
            android:id="@+id/button_electronics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELECTRONICS"
            android:textSize="25dp"
            android:background="@color/red"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>